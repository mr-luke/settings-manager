{
    "name": "mr-luke/settings-manager",
    "description": "Laravel 5 Package that provides settings manager with type casting.",
    "keywords": ["settings", "manager", "laravel"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Łukasz Sitnicki",
            "email": "lukasz.sitnicki@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "illuminate/database": "^5.4|^6.0|^7.0",
        "illuminate/support": "^5.4|^6.0|^7.0",
        "mr-luke/configuration": "^1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.9",
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^3.4|^4.0|^5.0",
        "phpunit/phpunit": "^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Mrluke\\Settings\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mrluke\\Settings\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mrluke\\Settings\\SettingsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
